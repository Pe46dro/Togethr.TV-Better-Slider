{
  "name": "Togethr.TV - Better Slider",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Just a simple extension to add a better volume control slider on Togethr.TV",
  "homepage_url": "https://github.com/Pe46dro",
  "icons": {
    "16": "icons/tgtv16.png",
    "48": "icons/tgtv48.png",
    "128": "icons/tgtv128.png"
  },
  "permissions": [
    "https://togethr.tv/*"
  ],
  "web_accessible_resources": ["src/inject/script.js"],
  "content_scripts": [
    {
      "matches": [
        "https://togethr.tv/*"
      ],
      "js": [
        "src/inject/inject.js"
      ],
	  "css": [
        "src/inject/inject.css"
      ],
	  "run_at": "document_end"
    }
  ]
}